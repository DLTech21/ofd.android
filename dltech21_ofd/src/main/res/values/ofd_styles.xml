<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/toolbar_bar_text_color</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="detailValueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">135dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/text_item_value</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="detailTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/person_text_color</item>
    </style>

    <style name="PersonIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="PersonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/person_text_color</item>
    </style>

    <style name="baseButton" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="redShadowButton" parent="baseButton">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/selector_red_btn_text_color</item>
        <item name="android:background">@drawable/selector_bg_red_shadow_button</item>
    </style>

    <style name="CertText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#75433a</item>
    </style>
    <style name="CertTextValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#75433a</item>
    </style>
    <style name="PersonArrow">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>